<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image View -->
        <ImageView
            android:id="@+id/classImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Gym Image" />

        <!-- Title and Date Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textClassName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/textDateOfTheClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Category -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:textColor="#808080" />

        <!-- Description -->
        <TextView
            android:id="@+id/textClassDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Description"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_margin="12dp" />

        <!-- Add any other details you want to display -->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
